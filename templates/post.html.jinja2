<article class="dark:text-gray-300 text-justify">{{paper|safe}}</article>
{% endblock %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    var paragraphs = document.querySelectorAll('p');
    paragraphs.forEach(function(paragraph) {
        if (paragraph.querySelector('img')  && paragraph.querySelector('strong')) {
            paragraph.classList.add('has-image-strong');
        }
    });
});
</script>